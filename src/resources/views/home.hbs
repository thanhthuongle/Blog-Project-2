<script>
    function setValueAndSubmit(value) {
        // Set the sort value
        document.getElementById("sortValue").value = value;

        // Get the current search value from the search input
        const searchInput = document.querySelector('input[name="q"]');
        if (searchInput) {
            const searchValue = searchInput.value;
            document.getElementById("searchValue").value = searchValue;
        }

        // Submit the sort form
        document.forms['sort'].submit();
    }
</script>



