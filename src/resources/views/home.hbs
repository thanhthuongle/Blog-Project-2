<div class="mt-4 clearfix" style="margin: 6rem;">
    <div class="float-left" style="width: 70%; margin-right: 10px;">
        <div class="mt-1 clearfix" style="background-color: #f8f9fa;">
            <div class="dropdown  dropright float-left" style="width: fit-content; margin-left: 16px;">
                <button class="btn btn-primary dropdown-toggle mt-2" type="button" id="dropdownMenuButton" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                    Sort
                </button>
                <div class="dropdown-menu" aria-labelledby="dropdownMenuButton" style="min-width:6rem;">
                    {{!-- <a class="dropdown-item" href="#"></a> --}}
                    <form action="" method="GET" name="sort">
                        <input type="hidden" id="sortValue" name="sort" value="">
                        <input type="hidden" id="searchValue" {{#if q}} name="q"  value="{{q}}" {{/if}}>
                        <button class="dropdown-item p-1 text-center" onclick="setValueAndSubmit(value)" value="date">Date</button>
                        <button class="dropdown-item p-1 text-center" onclick="setValueAndSubmit(value)" value="like">Like</button>  
                    </form>
                </div>
            </div>

            <nav class="navbar navbar-light bg-light float-right rounded" >
                <form class="form-inline">
                    <input class="form-control mr-sm-2" type="search" placeholder="Search" aria-label="Search" name="q" >
                    <button class="btn btn-outline-primary my-2 my-sm-0" type="submit">Search</button>
                </form>
            </nav>
        </div>
        <div class="row ">
            {{#each posts}}
            <div class="col-lg-6 col-xl-4">
                <div class="card" style="width: 18rem; margin-top: 16px;">
                    <a href="/posts/{{this._id}}">
                        <img class="card-img-top" src="{{this.thumbnail}}" alt="{{this.title}}" style="height: 160px;">
                    </a>
                    <div class="card-body">
                        <a href="/posts/{{this._id}}" style="text-decoration: none;">
                            <h5 class="card-title">{{this.title}}</h5>
                        </a>
                        <p class="card-text">{{this.description}}</p>
                        <a href="/posts/{{this._id}}" class="btn btn-primary">Đọc bài viết</a>
                    </div>
                </div>
            </div>
            {{/each}}  
        </div>

        {{!-- phân trang --}}
        <nav aria-label="Page navigation example">
            <ul class="pagination mt-5" style="margin-bottom: 80px;">
                {{#if noHome}}
                <li class="page-item"><a class="page-link" {{#if (checkPageHome (diff checkPage 1))}}href="/{{holdQuery}}"{{else}}href="/page/{{#diff checkPage 1}}{{/diff}}/{{holdQuery}}"{{/if}}>Previous</a></li>
                {{/if}}
                {{#each page}}
                <li class="page-item" ><a class="page-link" {{#if (checkPageHome this.ind)}}href='/{{this.holdQuery}}'{{else}}href='/page/{{this.ind}}/{{this.holdQuery}}'{{/if}} >{{this.ind}}</a></li>
                {{/each}}
                <li class="page-item"><a class="page-link" href="/page/{{#sum checkPage 1}}{{/sum}}/{{holdQuery}}">Next</a></li>
            </ul>
        </nav>
    </div>

